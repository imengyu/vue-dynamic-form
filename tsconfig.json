{
  "include": [
    "src/env.d.ts",
    "src/**/*",
    "src/**/*.tsx",
    "docs/**/*.vue",
    "docs/**/*.tsx",
    "docs/**/*"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "importHelpers": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictFunctionTypes": false,
    "composite": true,
    "baseUrl": ".",
    "isolatedModules": false,
    "declaration": true,
    "declarationDir": "./types/",
    "outDir": "./temp",
    "paths": {
      "@/*": ["./src/*"],
      "vue-dynamic-form": [ "./src/lib/main" ],
      "@imengyu/vue-dynamic-form": [ "./src/lib/main" ]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  }
}
