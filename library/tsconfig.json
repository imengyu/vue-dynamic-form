{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "./**/*",
    "./**/*.tsx",
  ],
  "exclude": ["./**/__tests__/*"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "importHelpers": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictFunctionTypes": false,
    "composite": true,
    "baseUrl": ".",
    "isolatedModules": false,
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  }
}
